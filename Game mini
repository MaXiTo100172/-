  overflow: hidden;
  font-family: Arial;
  /* –§–æ–Ω —Å —Ç–≤–æ–µ–π —Ñ–æ—Ç–æ–≥—Ä–∞—Ñ–∏–µ–π */
  background: url("");
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

/* –û–±–ª–∞–∫–∞ */
.cloud {margin: 0;

  position: absolute;
  font-size: 50px;
  animation: float 20s linear infinite;
}

@keyframes float {
  from { transform: translateX(-100px); }
  to { transform: translateX(110vw); }
}

#cat {
  position: absolute;
  bottom: 30px;
  left: 50%;
  font-size: 90px;   /* —Ä–∞–∑–º–µ—Ä –∫–æ—Ç–∏–∫–∞ */
  transform: translateX(-50%);
}

.treat {
  position: absolute;
  font-size: 50px;   /* —Ä–∞–∑–º–µ—Ä –≤–∫—É—Å–Ω—è—à–µ–∫/–±–æ–º–± */
}

#ui {
  position: absolute;
  top: 15px;
