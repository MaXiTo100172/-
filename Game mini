<body>

<!-- –û–±–ª–∞–∫–∞ -->
<div class="cloud" style="top:50px;">‚òÅÔ∏è</div>
<div class="cloud" style="top:120px; animation-delay:5s;">‚òÅÔ∏è</div>
<div class="cloud" style="top:200px; animation-delay:10s;">‚òÅÔ∏è</div>

<!-- UI -->
<div id="ui">
  Score: <span id="score">0</span> |
  Time: <span id="time">30</span>
</div>

<!-- –ö–æ—Ç -->
<div id="cat">üê±</div>

<script>
let cat = document.getElementById("cat");
let score = 0;
let time = 60;  // –°–∫–æ–ª—å–∫–æ —Å–µ–∫—É–Ω–¥ –¥–ª–∏—Ç—Å—è –∏–≥—Ä–∞

let treats = ["üêü","ü•õ","üçó","üç©","üßÅ"];
let bomb = "üí£";

// –î–≤–∏–∂–µ–Ω–∏–µ –∫–æ—Ç–∏–∫–∞ –∑–∞ –º—ã—à—å—é/–ø–∞–ª—å—Ü–µ–º
document.addEventListener("mousemove", (e) => {
  cat.style.left = e.clientX + "px";
});
document.addEventListener("touchmove", (e) => {
  cat.style.left = e.touches[0].clientX + "px";
});

// –°–æ–∑–¥–∞—ë–º –ø—Ä–µ–¥–º–µ—Ç—ã (–≤–∫—É—Å–Ω—è—à–∫–∏ –∏ –±–æ–º–±—ã)
function createItem() {
  if (time <= 0) return;

  let item = document.createElement("div");
  item.classList.add("treat");

  // 35% —à–∞–Ω—Å –±–æ–º–±—ã
  if (Math.random() < 0.2) {
    item.innerHTML = bomb;
    item.dataset.type = "bomb";
  } else {
    item.innerHTML = treats[Math.floor(Math.random()*treats.length)];
    item.dataset.type = "treat";
  }

  item.style.left = Math.random() * window.innerWidth + "px";
  item.style.top = "0px";
  document.body.appendChild(item);

  let fall = setInterval(() => {
    item.style.top = item.offsetTop + 7 + "px";

    if (item.offsetTop > window.innerHeight) {
      item.remove();
      clearInterval(fall);
    }

    let catRect = cat.getBoundingClientRect();
    let itemRect = item.getBoundingClientRect();

    // –ü—Ä–æ–≤–µ—Ä–∫–∞ –Ω–∞ —Å—Ç–æ–ª–∫–Ω–æ–≤–µ–Ω–∏–µ
    if (
      itemRect.bottom > catRect.top &&
      itemRect.left < catRect.right &&
      itemRect.right > catRect.left
    ) {
      if (item.dataset.type === "bomb") {
        score -= 2;  // –±–æ–º–±–∞ –æ—Ç–Ω–∏–º–∞–µ—Ç –æ—á–∫–∏
        if (score < 0) score = 0;
      } else {
        score += 1;
      }

      document.getElementById("score").innerText = score;
      item.remove();
      clearInterval(fall);
    }
  }, 20);
}

// –°–æ–∑–¥–∞—ë–º –ø—Ä–µ–¥–º–µ—Ç—ã –∫–∞–∂–¥—ã–µ 0.1 —Å–µ–∫—É–Ω–¥—ã
setInterval(createItem, 300);

// –¢–∞–π–º–µ—Ä
let timer = setInterval(() => {
  time--;
  document.getElementById("time").innerText = time;
  if (time <= 0) {
    clearInterval(timer);
    alert("Game Over! üêæ Your score: " + score);
  }
}, 1000);
</script>

